<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="310dp">
                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_launcher_background"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:id="@+id/progressBar"
                    />

                <ImageView
                    android:id="@+id/poster"
                    android:visibility="gone"
                    android:layout_width="110dp"
                    android:layout_height="160dp"
                    android:layout_gravity="bottom|left"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    android:layout_marginLeft="20dp" />

                <!--<TextView-->
                    <!--android:id="@+id/movie_title"-->
                    <!--android:layout_marginTop="100dp"-->
                    <!--android:layout_marginLeft="60dp"-->
                    <!--android:layout_width="180dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="@color/textColor"/>-->
                <!--<TextView-->
                    <!--android:id="@+id/movie_rating"-->
                    <!--android:layout_marginTop="135dp"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="@color/textColor"/>-->

            </FrameLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="25dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:textColor="@color/green"

                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/movie_info_release_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/movie_rating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/movie_duration"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/movie_info_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/textColor"/>
            <TextView
                android:id="@+id/showMore"
                android:text="Show More"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <LinearLayout

                android:id="@+id/budgetLL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_margin="2dp"
                    android:text="Budget :"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/movie_info_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/revenueLL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_margin="2dp"
                    android:text="Revenue :"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/movie_info_revenue"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="40dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="3dp"
                android:layout_height="60dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/like"
                        app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/mylist"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/share"
                        app:srcCompat="@drawable/ic_share_black_24dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <TextView
                        android:text="Like"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="My List"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Share"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="3dp"
                android:id="@+id/similarMovies"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_info_similar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:gravity="bottom"
                    android:text="Similar Movies"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/textColor" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_info_similar_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/casts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:gravity="bottom"
                    android:text="Cast"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/textColor" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_info_cast_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="5" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>