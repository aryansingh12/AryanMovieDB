<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aryansingh.aryanmoviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Movies.ShowAll" />
        <activity android:name=".MovieInfo.MovieInfo" />
        <activity android:name=".CastInfo.CastInfo" />
        <activity android:name=".CastInfo.CastGallery" />
        <activity android:name=".TvShows.TvShowAll" />
        <activity android:name=".TvShowInfo.TvInfo" />
        <activity android:name=".TvShows.ShowAllTv"></activity>
    </application>

</manifest>